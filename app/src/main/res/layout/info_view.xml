<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:background="@color/PayPro_Background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:paddingLeft="68dp"
            android:paddingRight="68dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo_horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeRows"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/PayPro_Background">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/PayPro_Line"
                android:minHeight="0.5dp" />

            <TableRow
                android:id="@+id/rowCommunity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ic_launcher_background">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:height="30dp"
                    android:background="@color/ic_launcher_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:text="@string/community"
                    android:textColor="@color/pp_light_purple" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/PayPro_Line"
                android:minHeight="0.5dp" />

            <TableRow
                android:id="@+id/rowTerms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ic_launcher_background">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/pp_light_purple" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/PayPro_Line"
                android:minHeight="0.5dp" />
        </TableLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:text="THEPAYPRO LTD. All rights reserved."
        android:textSize="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeRows" />

</android.support.constraint.ConstraintLayout>