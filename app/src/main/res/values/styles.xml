<resources>

    <!-- Base application theme. -->
    <style name="PayProTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/pp_light_purple</item>
        <item name="colorPrimaryDark">@color/pp_light_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PayProTheme.NoActionBar" parent="PayProTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="SearchView">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
    </style>

    <style name="DividerWithStartEndMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/PayPro_Line</item>
    </style>

    <style name="DividerWithStartMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@color/PayPro_Line</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/PayPro_Line</item>
    </style>
      
    <style name="continue_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:width">250dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/pp_green</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PPAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
    </style>

</resources>
